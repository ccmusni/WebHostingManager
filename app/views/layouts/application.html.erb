              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Log out</a>
            </li>              
          </ul>
          <i class="fa fa-user text-white" aria-hidden="true"></i>&nbsp;
          <span class="text-capitalize"><%= session[:user_name] %></span>
        </div>
      </nav>

    <!-- Preloader -->
    <div id="animationLoadBackgroud" class="">
